{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-non-null-asserted-optional-chain": "off",
    "react/no-unescaped-entities": "off",
    "no-unused-vars": "off",
    "no-unused-expressions": [
      "error",
      { "allowShortCircuit": true, "allowTernary": true }
    ]
  }
}
